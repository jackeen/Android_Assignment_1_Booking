<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="10dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        >

        <ImageView
            android:id="@+id/list_stay_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/list_nz_stay_1"
            />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:id="@+id/list_stay_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:singleLine="true"
            android:ellipsize="end"
            style="@style/TextAppearance.Material3.TitleLarge"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/semi_black"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>

        <RatingBar
            android:id="@+id/list_stay_item_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize="0.5"
            android:rating="4.5"
            style="@style/Widget.AppCompat.RatingBar.Small"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="5dp"/>

        <TextView
            android:id="@+id/list_stay_item_room_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room type name"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/list_stay_item_bed_type_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bed type name"
                    />
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    
                    <androidx.cardview.widget.CardView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="1dp"
                        >
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_margin="4dp"
                            android:src="@drawable/baseline_notifications_24"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="1dp"
                        >
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_margin="4dp"
                            android:src="@drawable/baseline_wifi_24"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="1dp"
                        >
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_margin="4dp"
                            android:src="@drawable/baseline_tv_24"
                            />
                    </androidx.cardview.widget.CardView>
                    
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="end"
                >


                <TextView
                    android:id="@+id/list_stay_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$78"
                    style="@style/TextAppearance.Material3.TitleLarge"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a room for 1 night"
                    />
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</LinearLayout>